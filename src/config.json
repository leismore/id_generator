    "projectName":  "id_generator",
    "appID":        "151551fb-6172-49ba-aa8c-c826b3082729",
    "host":         "localhost",
    "port":         "8081",
    "backlog":       511,
    "domain":       "localhost",
    "publicPort":   "8081",
    "ssl":          false
  },

  "auth_app_self":
  {
    "appID":         "29f4a510-9c34-40ad-a194-4ff0f5ace9f3",
    "api":
    {
      "author": {
        "url": "http://localhost:8080/api/authorizer"
      }
    }
